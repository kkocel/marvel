<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    tools:context="com.example.kkocel.marvel.detail.view.ComicDetailActivity"
    tools:parentTag="ScrollView">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_margin"
            android:layout_marginLeft="@dimen/detail_margin"
            android:layout_marginRight="@dimen/detail_margin"
            android:elevation="3dp"
            card_view:cardCornerRadius="@dimen/card_comic_radius"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/detail_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_backdrop_height"
                    android:elevation="4dp"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:alpha="0.3"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/detail_comic_image"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="157dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/detail_comic_name"
                    style="@style/ShadowOverlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_backdrop"
                    android:layout_marginBottom="@dimen/detail_margin"
                    android:layout_marginLeft="@dimen/detail_margin"
                    android:layout_marginStart="@dimen/detail_margin"
                    android:layout_toEndOf="@+id/detail_comic_image"
                    android:layout_toRightOf="@+id/detail_comic_image"
                    android:elevation="5dp"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/title_text_size"
                    tools:text="Better call saul" />

                <TextView
                    android:id="@+id/detail_comic_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_backdrop"
                    android:layout_marginBottom="@dimen/detail_margin"
                    android:layout_marginEnd="@dimen/detail_margin"
                    android:layout_marginLeft="@dimen/detail_margin"
                    android:layout_marginStart="@dimen/detail_margin"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/detail_comic_image"
                    android:layout_toRightOf="@+id/detail_comic_image"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/text_size"
                    tools:text="Lorem ipsum, lorem ipsum" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</merge>
